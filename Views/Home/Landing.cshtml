@*страница входа*@

@model Checkitlink.Models.ViewModels.ProfileVM

@{
    ViewBag.Title = "Добро пожаловать!";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["OK"] != null)
{
    <div class="alert alert-success">
        @TempData["OK"]
    </div>
}

@if (TempData["Enter"] != null)
{
    <div class="alert alert-success">
        @TempData["Enter"]
    </div>
}

<section id="lending-top-slide">
    <div class="row" style="float:right">
        <div class="col-lg-12 col-md-12 col-sm-12 top-buttons-landing">
            <div id="reg">
                <a href="#" id="reg-but" data-toggle="modal" data-target="#register">Зарегистрироваться сейчас</a>
            </div>
            <div id="login">
                <a id="log-but" href="#" data-toggle="modal" data-target="#entrance">Войти</a>
            </div>
        </div>
    </div>
    <div id="logo">
        <img src="~/Content/img/logo-main.png" style="margin-top: 75px; width: 86%;" />
        <h1>Бесплатный сервис хранения ссылок и закладок!</h1>
    </div>
    <div class="conteryner">
        <div id="public_link">
            <a id="public_link_but" href="#" data-toggle="modal" data-target="#info">
                <h2>Ознакомиться с CheckitLink</h2>
            </a>
        </div>
        <div class="modal" id="info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div id="modalWindow" class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close closeWindow" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h2 class="modal-title" id="myModalLabel" style="text-align:center">Про CheckitLink</h2>
                    </div>
                    <div class="modal-body col-lg-12 col-md-12 col-sm-12 aboutSite">
                        <div class="col-lg-4 col-md-4 col-sm-4 aboutBlock">
                            <h3>Свобода выбора категорий</h3>
                            <p>
                                В CheckitLink стандартные категории интересов подобраны таким образом,
                                что Вы сразу найдёте подходящую категорию для сохранения Вашей ссылки.
                                А возможность создавать собственные категории предоставляет
                                Вам полную свободу в формировании категорий под Ваши ссылки
                            </p>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 aboutBlock">
                            <h3>Приватность</h3>
                            <p>
                                По умолчанию ваши ссылки и закладки имеют статус "Приватные". Их никто не видит,
                                и они не появляются в общей ленте. Это удобно, если ваши закладки относятся к личным
                                материалам
                            </p>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 aboutBlock">
                            <h3>Публичные закладки</h3>
                            <p>
                                Хотите поделится со всеми пользователями интересным материалом?
                                Без проблем! Измените статус закладки на "Публичный", и тогда ее
                                увидят абсолютно все
                            </p>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 aboutBlock">
                            <h3>Избранные страницы</h3>
                            <p>
                                Часто посещаете одни и те же сайты с фильмами, музыкой, обучающими материалами,
                                развлекательные и новостные порталы? Добавьте их в избранное, и доступ к ним будет
                                в один клик
                            </p>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 aboutBlock">
                            <h3>Социальность</h3>
                            <p>
                                Подписывайтесь на интересных Вам пользователей и просматривайте их
                                публичные материалы
                            </p>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 aboutBlock">
                            <h3>Простота в использовании</h3>
                            <p>
                                Нашли интересный сериал, блог или информационный ресурс?
                                Добавьте закладку в CheckitLink, присвойте категорию и нажмите "Добавить"!
                            </p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Закрыть</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12" style="text-align:center">
                <div id="text-left-header" class="col-lg-6 col-md-6 col-sm-6">
                    <p class="col-lg-6">
                        Используйте закладки на любом рабочем месте,в любом браузере, операционной системе и устройстве
                    </p>
                </div>
                <div id="text-rigth-header" class="col-lg-6 col-md-6 col-sm-6">
                    <p class="col-lg-12">
                        Мы позаботились о том, что бы Вы могли просматривать свои закладки дома, на работе, в транспорте, на отдыхе, с любого компьютера, телефона или планшета
                    </p>
                    <p class="col-lg-12">
                        <img src="~/Content/img/OC.png" style="width:80%">
                    </p>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Enter == "Ошибка входа")
    {
        <div class="modal" id="entrance" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display:block">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="@Url.Action("Landing")" aria-label="Close" class = "btn close closeWindow">
                            <span aria-hidden="true">&times;</span>
                        </a>
                        <h4 class="modal-title" id="myModalLabel" style="text-align:center">Добро пожаловать</h4>
                    </div>
                    @{
                        ViewBag.Title = "Ошибка входа";
                        Html.RenderPartial("_EnterPartial", Model);
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="modal" id="entrance" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel" style="text-align:center">Добро пожаловать</h4>
                    </div>
                    @{
                        Html.RenderPartial("_EnterPartial", Model);
                    }
                </div>
            </div>
        </div>
    }

    @if (ViewBag.CreateAccountError == "Ошибка создания нового аккаунта")
    {
        <div class="modal" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display:block;">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="@Url.Action("Landing")" aria-label="Close" class="btn close closeWindow">
                            <span aria-hidden="true">&times;</span>
                        </a>
                        <h4 class="modal-title" id="myModalLabel" style="text-align:center">Регистрация</h4>
                    </div>
                    @{ 
                        ViewBag.Title = "Ошибка регистрации";
                        Html.RenderPartial("_CreateAccountPartial", Model);
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="modal" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel" style="text-align:center">Регистрация</h4>
                    </div>
                    @{
                        Html.RenderPartial("_CreateAccountPartial", Model);
                    }
                </div>
            </div>
        </div>
    }
</section>
