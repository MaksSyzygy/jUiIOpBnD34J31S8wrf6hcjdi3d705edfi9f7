@model Checkitlink.Models.ViewModels.ProfileVM

@using (Html.BeginForm("BanUser", "User"))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserVM.UserId)
        @Html.HiddenFor(model => model.UserVM.Login)
        @Html.HiddenFor(model => model.UserVM.Email)

        <div class="form-group">
            @Html.LabelFor(model => model.BlackListUserVM.Reason, htmlAttributes: new { @class = "blockLabel" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BlackListUserVM.Reason, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BlackListUserVM.Reason, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Заблокировать</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Закрыть</button>
    </div>
}